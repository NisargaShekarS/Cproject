//Searching operation in structure
#include<stdio.h>
#include<stdlib.h>
struct emp{
char id[10];
char name[20];
};
int main(){
struct emp emp1[3];
int i,flag=0;
char sid[10];
for(i=0;i<3;i++){
printf("enter the employee details");
scanf("%s\t %s\t",&emp1.id,&emp1.name);
}
printf("enter the sid to search");
scanf("%s",&sid);
for(i=0;i<3;i++){
if(strcmp(sid,emp1[i].id==0){
flag=1;
}
}
if(flag==1){
printf("employee found");
}
else{
printf("employee not found");
}
return 0;
}
